@model CCHS_March_.Models.View_Models.SubmitResponseViewModel

@using (Html.BeginForm("SubmitResponse", "Complainant", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
{

    <div class="row">
        <!-- Modal -->
        <div aria-hidden="false" aria-labelledby="myModalLabel" role="dialog" tabindex="-1" id="myModal" class="modal fade col-md-12" style="display: none;">
            <div class="modal-dialog" style="width: 1200px;">
                <div class="modal-content">
                    <div class="modal-header">
                        <button aria-hidden="true" data-dismiss="modal" class="close" type="button">×</button>
                        <h4 class="modal-title">Compose</h4>
                    </div>
                    <div class="modal-body">
                        <form role="form" class="form-horizontal">
                            <div class="form-group">
                                <label class="col-lg-2 control-label">Subject</label>
                                <div class="col-lg-10">
                                    @*<input type="text" placeholder="" id="inputPassword1" class="form-control">*@
                                    @Html.TextBoxFor(m => m.response.Subject, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-lg-2 control-label">Message</label>
                                <div class="col-lg-10">
                                    @Html.TextAreaFor(model => model.response.Message_Body, new { @id = "editor", placeholder = "", autofocus = "autofocus" })
                                    @*<textarea id="editor" placeholder="Enter Response" autofocus="autofocus"></textarea>*@
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-lg-offset-2 col-lg-10">
                                    @*<span class="btn green fileinput-button">
                                        <i class="fa fa-plus fa fa-white"></i>
                                        <span>Attachment</span>
                                        <input type="file" name="files[]" multiple="">*@
                                    @Html.TextBoxFor(m => m.attachments, new { @class = "form-control", type = "file", multiple = "multiple" })
                                    @*</span>*@
                                    <button class="btn btn-send" type="submit">Send</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div><!-- /.modal-content -->
            </div><!-- /.modal-dialog -->
        </div><!-- /.modal -->
    </div>

}
